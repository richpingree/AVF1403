function getRowData(){
	var newEntry = [];
	
	var rows = db.execute('SELECT * FROM groceryInfo');
	while (rows.isValidRow()){
		var id, product, price;
		
		id = rows.fieldByName('id');
		product = rows.fieldByName('productName');
		aisle = rows.fieldByName('aisleNumber');
		price = rows.fieldByName('price');
		
		newEntry.push({
			title: product + "		" + "		$" + price,
			id:id 
		});
		rows.next();
	}
	return newEntry;
};

require('edit');

win2.add(table);
win3 =Ti.UI.createWindow({
	title: 'Camera',
	backgroundColor: "black"
});

tab3 = Ti.UI.createTab({
	title: 'Camera',
	window:win3
});


win3.add(table2);

//
//  add tabs
//
tabGroup.addTab(tab1);  
tabGroup.addTab(tab2);  
tabGroup.addTab(tab3);


// open tab group
tabGroup.open();

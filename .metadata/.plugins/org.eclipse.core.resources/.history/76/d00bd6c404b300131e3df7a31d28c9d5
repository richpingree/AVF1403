var db = Ti.Database.open("groceryInfo");
db.execute('CREATE TABLE IF NOT EXISTS groceryInfo (id INTEGER PRIMARY KEY, storeName TEXT, productName TEXT, aisleNumber INTEGER, price INTEGER)');

